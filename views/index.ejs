<%- include('partials/header.ejs') %>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>To Do Items</h1>
            <ul class="list-group">
                <% todos.forEach( function(todo) { %>
                    <li class="list-group-item">
                        <span class="lead">
                            <%= todo.text %>
                        </span>
                        <div class="d-grid gap-2 d-flex justify-content-end">
                            <form style="display: inline" method="GET" action="/todos/<%=todo._id%>/edit">
                                <button type="submit" class="btn btn-sm btn-warning me-md-2">Edit</button>
                            </form>

                            <form style="display: inline" method="POST" action="/todos/<%=todo._id%>?_method=DELETE">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                        <div class="clearfix"></div>
                    </li>
                    <% }); %>
            </ul>
            <a href="/todos/new" class="btn btn-primary ">New Item</a>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>